{
  "expo": {
    "name": "Barakaah",
    "slug": "barakaah",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#059669"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.barakaah.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "L'application a besoin de votre localisation pour calculer les horaires de prière précis et la direction de la Qibla.",
        "NSMotionUsageDescription": "L'application utilise les capteurs de mouvement pour la boussole Qibla."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#059669"
      },
      "package": "com.barakaah.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "HIGH_SAMPLING_RATE_SENSORS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-asset",
      "expo-sensors",
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "barakaah-islamic-app"
      }
    },
    "owner": "barakaah",
    "description": "Application islamique complète pour la communauté chiite. Coran, Duas, horaires de prière, calendrier Hijri et plus."
  }
}

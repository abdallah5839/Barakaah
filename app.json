{
  "expo": {
    "name": "Sakina",
    "slug": "sakina",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F4C35"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sakina.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "L'application a besoin de votre localisation pour calculer les horaires de prière précis et la direction de la Qibla.",
        "NSMotionUsageDescription": "L'application utilise les capteurs de mouvement pour la boussole Qibla.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F4C35"
      },
      "package": "com.sakina.spiritual",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "HIGH_SAMPLING_RATE_SENSORS",
        "FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-asset",
      "expo-sensors",
      "expo-notifications"
    ],
    "owner": "abdallah.sbh",
    "description": "Application islamique complete. Coran, horaires de priere, Qibla, Tasbih, calendrier Hijri et plus.",
    "extra": {
      "eas": {
        "projectId": "3d9fe5d1-9bba-4bf1-acfb-f9fd2b136008"
      }
    }
  }
}
